<% layout('layout') %>
<div class="center">
    <h1>訂單寄送資料</h1>
    <form action="create_order" method="post">
        <div>
            <h2>收件人</h2>
            <input class="inputext" type="text" name="name" value="<%- data.name %>">
            <h2>收件人電話</h2>
            <input class="inputext" type="text" name="phone" value="<%- data.phone %>">
            <h2>收件地址</h2>
            <input class="inputext" type="text" name="address" value="<%- data.address %>">
            <h2>總金額：<%= cost%></h2>        
            <input type="submit" value="確定">               
        </div>
    </form>   
    
</div>